#include <stdio.h>
#define TAM 30

void preencherVetor(int v[], int n);
void imprimirVetor(int v[], int n);
void ordenar(int v[], int n);
void impar(int v[], int n);
void novosvetores(int v[], int n, int vp[], int vi[]);

int main() {
    int n;

    printf("Quantos elementos o vetor terá? ");
    scanf("%d", &n);

    int vetor[n];
    int vp[n], vi[n];

    preencherVetor(vetor, n);
    imprimirVetor(vetor, n);
    ordenar(vetor, n);
    imprimirVetor(vetor, n);
    impar(vetor, n);
    novosvetores(vetor, n, vp, vi); 

    return 0;
}

void preencherVetor(int v[], int n) {
    for (int i = 0; i < n; i++) {
        printf("Digite o %dº número do vetor: ", i + 1);
        scanf("%d", &v[i]);
    }
}

void imprimirVetor(int v[], int n) {
    printf("{ ");
    for (int i = 0; i < n; i++) {
        if (i == n - 1)
            printf("%d ", v[i]);
        else
            printf("%d, ", v[i]);
    }
    printf("}\n");
}

void ordenar(int v[], int n) {
    int aux;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n - 1 - i; j++) {
            if (v[j] > v[j + 1]) {
                aux = v[j];
                v[j] = v[j + 1];
                v[j + 1] = aux;
            }
        }
    }
}

void impar(int v[], int n) {
    for (int i = n - 1; i >= 0; i--) {
        if (v[i] % 2 != 0) {
            printf("Maior número ímpar é :  %d\n", v[i]);
            return;
        }
    }
    printf("Não tem número ímpar\n");
}

void novosvetores(int v[], int n, int vp[], int vi[]) {
    int cp = 0, ci = 0;

    for (int i = 0; i < n; i++) {
        if (v[i] % 2 == 0) {
            vp[cp++] = v[i];
        } else {
            vi[ci++] = v[i];
        }
    }

    if (ci > cp) {
        while (cp < ci) {
            vp[cp++] = -1;
        }
    } else if (cp > ci) {
        while (ci < cp) {
            vi[ci++] = -1;
        }
    }

    printf("Pares: ");
    for (int i = 0; i < cp; i++) printf("%d ", vp[i]);
    printf("\n");

    printf("Impares: ");
    for (int i = 0; i < ci; i++) printf("%d ", vi[i]);
    printf("\n");
}
