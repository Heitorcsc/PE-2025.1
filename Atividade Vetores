#include <stdio.h>
#define TAM 26


typedef struct{
    char nome[100];
    double numero;
    double acidentes;
} Data;

void ColetarDados(Data dados[], char nome,double numero,double acidentes){
    for(int i = 0; i < TAM; i++){
        printf("Digite o nome do estado: ");
        scanf("%99[^\n]",dados[i].nome);
        printf("Digite o numero de veículos do estado: ");
        scanf("%d",&dados[i].numero);
        printf("Digite o número de acidentes: ");
        scanf("%d", &dados[i].acidentes);
    }


}

void encontrarMaioreMenor(Data dados[], double *indMaior,double *indMenor,){
    *indMaior = 0;
    *indMenor = 0;

    for(int i = 0; i < TAM; i++){
        if( v[i].acidentes > v[*indMaior].acidentes){
             *indMaior = i;
        } else( v[i].acidentes < v[*indMenor].acidentes){
            *indMenor = i;
        }
    }
}

void percentualAcidentes(Data dados[]){
    
    for(int i = 0; i < tam; i++){
        double percentual = ((dados[i].acidentes / dados[i].numero) * 100)
        printf("O percentual de acidentes do estado %s foi de %f",dados[i].nome,percentual);
    }
}