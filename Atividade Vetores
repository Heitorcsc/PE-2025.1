#include <stdio.h>
#define TAM 26

typedef struct {
    char nome[100];
    int numero;
    int acidentes;
} Data;

void ColetarDados(Data dados[]) {
    for (int i = 0; i < TAM; i++) {
        printf("Digite o nome do estado: ");
        scanf(" %99[^\n]", dados[i].nome);

        printf("Digite o número de veículos do estado: ");
        scanf("%d", &dados[i].numero);

        printf("Digite o número de acidentes: ");
        scanf("%d", &dados[i].acidentes);
    }
}

void encontrarMaioreMenor(Data dados[], int *indMaior, int *indMenor) {
    *indMaior = 0;
    *indMenor = 0;

    for (int i = 1; i < TAM; i++) {
        if (dados[i].acidentes > dados[*indMaior].acidentes) {
            *indMaior = i;
        }
        if (dados[i].acidentes < dados[*indMenor].acidentes) {
            *indMenor = i;
        }
    }
}

void percentualAcidentes(Data dados[]) {
    for (int i = 0; i < TAM; i++) {
        double percentual = 0.0;

        if (dados[i].numero != 0) {
            percentual = ((double)dados[i].acidentes / dados[i].numero) * 100.0;
        }

        printf("Estado: %s | Percentual: %.2f%%\n", dados[i].nome, percentual);
    }
}

void Media(Data dados[]) {
    int soma = 0;
    double media;

    for (int i = 0; i < TAM; i++) {
        soma += dados[i].acidentes;
    }

    media = (double)soma / TAM;

    printf("A média de acidentes no país é: %.2f\n", media);
}
